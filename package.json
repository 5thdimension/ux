{
	"name": "web-extension-starter",
	"version": "1.0.0",
	"description": "A web browser extension starter - based on Typescript, React, Redux, Styled-Component, Webpack, and more. Runs on Chrome and Firefox.",
	"main": "index.js",
	"scripts": {
		"dev-server": "cross-env NODE_ENV=development webpack-dev-server -d",
		"dev": "cross-env NODE_ENV=development webpack -d",
		"prod": "cross-env NODE_ENV=production webpack -p",
		"watch": "cross-env NODE_ENV=development EXT_ENV=watch webpack -d",
		"clean": "rm -rf ./dist",
		"clean:all": "rm -rf ./dist && rm -rf ./coverage && rm -rf ./node_modules",
		"lint": "eslint --ext .ts,.tsx ./src/ -f unix",
		"lint:fix": "eslint --ext .ts,.tsx ./src/ -f unix --fix",
		"test": "jest",
		"test:coverage": "jest --collect-coverage"
	},
	"license": "MIT",
	"dependencies": {
		"@hot-loader/react-dom": "^16.9.0",
		"blockstack-keychain": "file:../keychain",
		"blockstack-ui": "^0.0.78",
		"react": "^16.8.6",
		"react-chrome-redux": "^2.0.0-alpha.5",
		"react-dom": "^16.8.6",
		"react-hot-loader": "^4.12.12",
		"react-redux": "^7.1.1",
		"redux": "4.0.4",
		"redux-persist": "^6.0.0",
		"redux-thunk": "^2.3.0",
		"styled-components": "^4.3.2",
		"webext-redux": "^2.1.2"
	},
	"devDependencies": {
		"@types/chrome": "^0.0.86",
		"@types/jest": "^24.0.15",
		"@types/node": "^12.6.2",
		"@types/react": "^16.8.23",
		"@types/react-dom": "^16.8.4",
		"@types/react-redux": "^7.1.2",
		"@types/react-test-renderer": "^16.8.2",
		"@types/styled-components": "4.1.8",
		"@types/webpack": "^4.4.35",
		"@typescript-eslint/eslint-plugin": "^2.1.0",
		"@typescript-eslint/parser": "^2.1.0",
		"awesome-typescript-loader": "^5.2.1",
		"clean-webpack-plugin": "^3.0.0",
		"copy-webpack-plugin": "^5.0.3",
		"cross-env": "^5.2.0",
		"eslint": "^6.3.0",
		"eslint-config-prettier": "^6.2.0",
		"eslint-plugin-prettier": "^3.1.0",
		"eslint-plugin-react": "^7.14.3",
		"fork-ts-checker-webpack-plugin": "^1.5.0",
		"html-webpack-plugin": "^3.2.0",
		"jest": "^24.8.0",
		"prettier": "^1.18.2",
		"react-test-renderer": "^16.8.6",
		"ts-jest": "^24.0.2",
		"ts-loader": "^6.0.4",
		"tslint": "^5.18.0",
		"typescript": "3.6.2",
		"webpack": "^4.35.3",
		"webpack-chrome-extension-reloader": "^1.3.0",
		"webpack-cli": "^3.3.5",
		"webpack-dev-server": "^3.8.0",
		"webpack-extension-reloader": "^1.1.0"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/ymdevs/Web-Extension-Starter.git"
	}
}
